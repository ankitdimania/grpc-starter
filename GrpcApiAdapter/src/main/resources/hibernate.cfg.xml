<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL57InnoDBDialect</property>

        <property name="hibernate.connection.url">jdbc:mysql://localhost/grootstock_dev</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password"></property>

        <mapping class="com.grootstock.models.Company"/>
    </session-factory>
</hibernate-configuration>
